int check_if_prime(int x, int n);

int is_prime_number(int n)
{
  if (n == 1)
    return 0;
  return check_if_prime(n-1, n);
}

/* a recursive function to test if n is a prime number */
int check_if_prime(int x, int n)
{
  if (x == 0)
    {
      return 1;
    }
